@model DashboardViewModel
<div class="container-fluid py-4">
    <div class="row g-4">
        <div class="col-md-8">
            <div class="card border-0 shadow-sm p-4 rounded-4 mb-4">
                <h5 class="fw-bold mb-4">Detection Thresholds</h5>
                
                <label class="form-label d-flex justify-content-between">
                    <span>Auto-Action Sensitivity</span>
                    <span class="fw-bold text-primary">85%</span>
                </label>
                <input type="range" class="form-range mb-4" value="85">

                <label class="form-label d-flex justify-content-between">
                    <span>Queue for Review Score</span>
                    <span class="fw-bold text-warning">50%</span>
                </label>
                <input type="range" class="form-range mb-4" value="50">
            </div>

            <div class="card border-0 shadow-sm p-4 rounded-4">
                <h5 class="fw-bold mb-3">API Connectivity</h5>
                <div class="d-flex align-items-center p-3 bg-light rounded-3">
                    <div class="flex-grow-1">
                        <div class="fw-bold">Risk Analysis Engine (v2.4)</div>
                        <div class="text-muted small">Endpoint: https://api.behavior-risk.internal/v1</div>
                    </div>
                    <span class="badge bg-success">CONNECTED</span>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card border-0 shadow-sm p-4 rounded-4 h-100 bg-primary text-white">
                <h5 class="fw-bold mb-3">Model Stats</h5>
                <p class="small opacity-75">Your current AI model is optimizing for precision.</p>
                <hr>
                <div class="mb-3">
                    <small>F1 Score</small>
                    <div class="progress mt-1" style="height: 5px;">
                        <div class="progress-bar bg-white" style="width: 92%"></div>
                    </div>
                </div>
                <button class="btn btn-light w-100 mt-auto fw-bold">Update Weights</button>
            </div>
        </div>
    </div>
</div>